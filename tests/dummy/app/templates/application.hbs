<h2 id="title">Welcome to Ember</h2>

<ul>
{{#each eventsArray as |event|}}
  <li>{{event.title}} <button onclick={{action "removeEvent" event}}>x</button></li>
{{/each}}
</ul>

{{input value=eventTitle}} <button onclick={{action "addEvent" event}}>Add</button>

<h3>Change Calendar View</h3>
<button onclick={{action "changeView" "month"}}>Month</button>
<button onclick={{action "changeView" "agendaWeek"}}>Week</button>
<button onclick={{action "changeView" "agendaDay"}}>Day</button>
<br/>
<br/>

{{full-calendar events=eventsArray viewName=viewName}}
